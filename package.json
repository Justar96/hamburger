{
  "name": "choice-chorus",
  "version": "0.1.0",
  "description": "Daily collaborative prompt generation for Reddit - A Devvit Web interactive post application",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "pnpm run build:server && pnpm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "echo Client assets already in public/ directory",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:all": "pnpm run test && pnpm run test:integration && pnpm run test:e2e",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "validate": "vitest run tests/devvit-validation.test.ts"
  },
  "keywords": [
    "reddit",
    "devvit",
    "hackathon",
    "collaborative",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@devvit/server": "^0.12.1",
    "@devvit/web": "^0.12.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  }
}
